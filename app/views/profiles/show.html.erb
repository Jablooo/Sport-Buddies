<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @profile.avatar_url, :class => 'profile_avatar' %>
</p>

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>Sex:</strong>
  <%= @profile.sex %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @profile.DOB %>
</p>

<p>
  <strong>Street:</strong>
  <%= @profile.street %>
</p>

<p>
  <strong>Postcode:</strong>
  <%= @profile.postcode %>
</p>

<p>
  <strong>State:</strong>
  <%= @profile.state %>
</p>

<% if @profile.user == current_user %>
  <%= link_to 'Edit Profile', edit_profiles_path, class: "btn btn-outline-dark" %>
<% end %>

<br>
<%= link_to 'Back', root_path %>
