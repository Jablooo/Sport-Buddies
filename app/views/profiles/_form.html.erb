<%= form_with(model: profile, url:profiles_path, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, id: :profile_avatar_data, :angle=>"exif", :gravity=>"auto", :height=>500, :width=>500, :crop=>"fill" %>
  </div>

  <div class="field">
    <%= form.text_field :first_name, placeholder: "first name", id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.text_field :last_name, placeholder: "last name", id: :profile_last_name %>
  </div>

  <div class="field">
    <%= form.label :sex %>
    <%= form.select :sex, ['Male', 'Female'], id: :profile_sex %>
  </div>

  <div class="field">
    <%= form.label :DOB %>
    <%= form.date_select :DOB, order: [:day, :month, :year], id: :profile_DOB %>
  </div>

  <div class="field">
    <%= form.label :street %>
    <%= form.text_field :street, placeholder: "address", id: :profile_street %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_field :postcode, placeholder: "2000", id: :profile_postcode %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.select :state, ['ACT', 'NSW', 'NT', 'QLD', 'SA', 'TAS', 'VIC', 'WA'], id: :profile_state %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
