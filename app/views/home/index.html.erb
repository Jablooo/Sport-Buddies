
<div class="heading">
  <h3>Welcome to</h3>
  <h1>Sport Buddies</h1>
</div>

<div class="container">
  <div class="row tabs">
    <h4 class="buddies col-6">Buddies</h4>
    <h4 class="equipment col-6">Equipment</h4>
  </div>

  <div class="row home_feed">
    <%#= render 'items/items' %>
    <%= render 'profiles/profile' %>

  </div>

  <div class="row">
    <div class="col-md-9">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </ul>
    </div>

    <div class="col-md-3">
      <div class="card card-primary">
        <div class="card-heading">
          <h3 class="card-title">User list</h3>
        </div>
        <div class="card-body">
          <ul>
            <% @users.each do |user| %>
              <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>
