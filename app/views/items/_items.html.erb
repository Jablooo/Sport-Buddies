<!-- item thumbnail for general use  -->

<div class="container">
  <div class="row row_item justify-content-start">
    <% @items.reverse.each do |item| %>
    
      <div class="item_img col-6">
        <%= link_to (image_tag (item.photo_url(:angle=>"exif", :gravity=>"auto", :height=>500, :width=>500, :crop=>"fill")), :class => 'card-img-top feed_grid'), item_path(item.id) %>
      </div>

      <div class="text_box col-6">
        <p class="card-text"><span class="item_name"><%= "sport" %></span></p>
        <p class="card-text"><span class="item_name"><%= item.name %></span></p>
        <p class="card-text"><span class="item_name"><%= item.description %></span></p>
        <p class="card-text"><span class="item_price">$ <%= item.selling_price %></span></p>
      </div>
    <% end %>
  </div>
</div>
