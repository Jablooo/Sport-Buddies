<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Photo data</th>
      <th>Name</th>
      <th>Description</th>
      <th>Selling price</th>
      <th>Renting price</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.photo_url %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.selling_price %></td>
        <td><%= item.renting_price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.user %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

